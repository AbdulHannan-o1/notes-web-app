<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    <title>notes App</title>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div id="form" class="form p-10 text-white p-10">
            <form action="/create" method="post">
                <input name="title" class="block w-full rounded-md outline-none px-10  bg-zinc-700" type="text" placeholder="Title goes here">
                <textarea name="details" class="block w-full resize-none rounded-md outline-none px-10 mt-5 bg-zinc-700" placeholder="Write your task"></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit">
            </form>
        </div>
        <div class="tasks  flex gap-3 flex-wrap p-10">
        <% if(files.length > 0) {%>
            <% files.forEach((val)=> { %>
                <div class="task min-w-72  px-3 py-4 rounded-md bg-zinc-800 ">
                    <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                    <div class="flex w-full justify-between items-center mt-4 ">
                        <a class="text-blue-500 inline-block " href="/files/<%= val %>">Read More</a>
                        <a class="text-zinc-500" href="/edit/<%= val %>">Edit File Name</a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
        <h3 class="text-zinc-500 ">no-task yet</h3>
        <% } %>          
        </div>
    </div>
</body>
</html> 